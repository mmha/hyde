#!/bin/bash

EXE_DIR=$(dirname "$0")

pushd ${EXE_DIR} > /dev/null

HYDE_PATH=$<TARGET_FILE:hyde>
HYDE_SRC_ROOT=@PROJECT_SOURCE_DIR@
HYDE_DST_ROOT=@PROJECT_SOURCE_DIR@/docs/libraries

for CUR_FILE in @PROJECT_SOURCE_DIR@/test_files/*; do
    echo "Processing $CUR_FILE"
    CUR_COMMAND="${HYDE_PATH} -hyde-update "$CUR_FILE" --"
    echo $CUR_COMMAND
    eval $CUR_COMMAND
done

popd > /dev/null
